@model Sisbg.Models.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    <h4>Product</h4>
    <hr />
    @using (Html.BeginForm("Create", "Products", FormMethod.Post,
                            new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-5">
                        <label for="Name" class="control-label col-md-2">Име</label>
                    </div>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-5">

                        <label for="BriefDescription" class="control-label col-md-2">Кратко описание</label>
                    </div>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.BriefDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BriefDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-5">
                        <label for="Description" class="control-label col-md-2">Описание</label>
                    </div>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-5">
                        <label for="JobDescription" class="control-label col-md-2">Приложение</label>
                    </div>
                    <div class="col-md-7">
                        @Html.EditorFor(model => model.JobDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.JobDescription, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Създайте продукт" class="btn btn-primary btn-lg" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div id="lengths-container" class="form-horizontal"></div>
            <a id="add-length" class="btn btn-primary btn-lg btn-block">Добавете още дължини</a>
        </div>
        <div class="col-md-4">
            <div id="images-upload-container"></div>
            <a id="add-upload-image" class="btn btn-primary btn-lg">Добавете още снимки</a>
        </div>
    }
</div>
